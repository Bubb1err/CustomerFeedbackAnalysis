<form method="post" asp-controller="Feedback" asp-action="PostFeedbackInput" class="mt-4">
    <div class="form-group">
        <label for="feedbackInput" class="font-weight-bold text-light">Your Feedback:</label>
        <textarea id="feedbackInput" name="feedback" class="form-control bg-dark text-light" rows="4" placeholder="Enter your feedback here..." style="margin-bottom: 10px;" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
